<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
        <ImageView
                android:id="@+id/iv_experience"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icn_phone"
                android:padding="5dp"
                android:scaleType="centerCrop"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_experience_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_sample"
                    android:layout_marginStart="20dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
            />
            <TextView
                    android:id="@+id/tv_experience_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_sample"
                    android:layout_marginStart="20dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
            />
            <TextView
                    android:id="@+id/tv_time_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_sample"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:textSize="10dp"
            />
            <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_sample"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:textSize="10dp"
            />
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_role_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_sample"
            android:layout_marginStart="20dp"
            android:layout_gravity="top"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:textSize="14dp"
    />
    <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="10dp"
    />
</LinearLayout>